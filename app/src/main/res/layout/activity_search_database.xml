<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="commrhardman23.httpsgithub.employeedatabase.SearchDatabase">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edtxtName"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtxtPosition"
        android:hint="Position"
        android:layout_below="@+id/edtxtName"
        android:layout_alignLeft="@+id/edtxtName"
        android:layout_alignStart="@+id/edtxtName"
        android:layout_alignRight="@+id/edtxtName"
        android:layout_alignEnd="@+id/edtxtName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/edtxtEmployeeNum"
        android:hint="Employee Number"
        android:layout_below="@+id/edtxtPosition"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/edtxtWage"
        android:hint="Wage"
        android:layout_below="@+id/edtxtEmployeeNum"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtvwResult"
        android:layout_below="@+id/btnDelete"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:textSize="14sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search Database"
        android:id="@+id/btnSearch"
        android:layout_below="@+id/edtxtWage"
        android:layout_centerHorizontal="true"
        android:onClick="searchDatabase" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Entry"
        android:id="@+id/btnDelete"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="deleteEntry" />

</RelativeLayout>
